<h1>Title <%= @post.title %></h1>

<%= link_to 'Posts', posts_path %> <%= link_to "Write New Comment", new_post_comment_path %>
<h2>Comments</h2>
<ul>
  <% @comments.each do |comment| %>
    <li>
      <%= comment.content %>(<%= comment.created_at %>) (<%= comment.user.email %>)
      <%= link_to 'Edit', edit_post_comment_path(@post, comment) %>
      <%= button_to 'Delete', post_comment_path(@post, comment), method: :delete %>
    </li>
  <% end %>
</ul>
<%= paginate @comments %>

