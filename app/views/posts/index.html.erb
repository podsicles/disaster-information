<h1>Disaster Information</h1>

<%= link_to 'New', new_post_path %>

<table>
  <thead>
  <td>Title</td>
  <td>Content</td>
  <td>Address</td>
  </thead>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= post.address %></td>
      <td>
        <%= link_to 'Show', post_path(post) %>
        <%= link_to 'Edit', edit_post_path(post) %>
      </td>
    </tr>
  <% end %>
</table>